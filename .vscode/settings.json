    "editor.formatOnPaste": false,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "file:///Users/michael/Developer/observerly/perseus/.github/workflows/deploy.yml"
